@model IEnumerable<pasajeApp.Modelo.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
}
<div class="contaier mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Usuario</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class=" table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Edad)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Edad</td>
                        <td>@item.Email</td>
                        <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td> <!-- Formato de fecha -->
                    </tr>
                }
            </tbody>
        </table>





    }
</div>