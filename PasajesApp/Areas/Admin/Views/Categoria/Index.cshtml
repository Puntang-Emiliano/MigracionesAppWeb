@{
    ViewData["Title"] = "Lista de Categorias";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h2 class="titulo-unificado text-primary">Lista de Categorías</h2>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-md-4 text-md-right text-center">
            <a asp-action="Create" class="btn btn-unificado mx-1">
                <i class="fa-solid fa-plus"></i> Crear Nueva Categoría
            </a>
            <br />
            <br />
            <a asp-action="GenerarReporte" class="btn btn-unificado mx-1">
                <i class="fa-solid fa-file-pdf"></i> Generar Reporte PDF
            </a>
        </div>
    </div>

    <hr class="my-4" />

    <div class="table-responsive">
        <table id="tblCategorias" class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Habilitada</th>
                    <th>Operaciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Contenido de la tabla se llenará dinámicamente -->
            </tbody>
        </table>
    </div>
</div>

