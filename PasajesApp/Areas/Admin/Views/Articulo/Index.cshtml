@{
    ViewData["Title"] = "Lista de Artículos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="titulo-unificado text-primary">Lista de Artículos</h2>
        </div>
        <div class="col-4 text-right d-flex justify-content-end">
            <a href="/Admin/Articulo/Create" class="btn-unificado me-2">
                <i class="fa-solid fa-plus"></i> Crear Artículo
            </a>
            <a href="/Admin/Articulo/GenerarReporte" class="btn-unificado">
                <i class="fa-solid fa-file-pdf"></i> Generar Reporte PDF
            </a>
        </div>
    </div>
    <br />
    <table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Habilitada</th>
                <th>Imagen</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- El cuerpo de la tabla será rellenado automáticamente por DataTables -->
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- Incluir jQuery y DataTables si aún no están incluidos en tu proyecto -->
    <script src="~/js/Articulo.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
}
