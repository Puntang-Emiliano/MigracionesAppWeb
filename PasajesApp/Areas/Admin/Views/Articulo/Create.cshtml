@model pasajeApp.Modelo.ViewModel.ArticuloVM
@{
    ViewData["Title"] = "Crear Artículo";
}

<h2 class="titulo-unificado text-primary">Crear Artículo</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Articulo.Nombre"></label>
        <input asp-for="Articulo.Nombre" class="form-control" />
        <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Articulo.habilitada"></label>
        <input asp-for="Articulo.habilitada" class="form-control" />
        <span asp-validation-for="Articulo.habilitada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Articulo.Imagen"></label>
        <input asp-for="Articulo.Imagen" class="form-control" />
        <span asp-validation-for="Articulo.Imagen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Articulo.CategoriaId"></label>
        @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias, "Seleccione una categoría", new { @class = "form-control" })
        <span asp-validation-for="Articulo.CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Articulo.precio"></label>
        <input asp-for="Articulo.precio" class="form-control" />
        <span asp-validation-for="Articulo.precio" class="text-danger"></span>
    </div>

    <button type="submit" class="btn-unificado">Crear</button>
</form>