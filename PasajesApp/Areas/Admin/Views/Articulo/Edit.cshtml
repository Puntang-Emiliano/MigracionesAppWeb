                <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
            </div>
        </div>

        <br /> *@

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.precio"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.precio" class="form-control" placeholder="Ingresa el precio" />
                <span asp-validation-for="Articulo.precio" class="text-danger"></span>
            </div>
        </div>

        <br />
@* 
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.Stock"></label>
