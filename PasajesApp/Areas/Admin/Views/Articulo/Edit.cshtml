@model PasajesApp.Areas.Admin.ViewModels.ArticuloMV



@{
    ViewData["Title"] = "Editar Artículo";
}

<h3 class="text-center">Editar artículo</h3>
<form asp-action="Edit">
    <input type="hidden" asp-for="Articulo.IdArticulo" />

    <div class="col-10 offset-1 mt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.Nombre"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingresa el nombre del artículo" />
                <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.Descripcion"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.Descripcion" class="form-control" placeholder="Ingresa la descripción del artículo" />
                <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.precio"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.precio" class="form-control" placeholder="Ingresa el precio" />
                <span asp-validation-for="Articulo.precio" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.stock"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.stock" class="form-control" placeholder="Ingresa el stock disponible" />
                <span asp-validation-for="Articulo.stock" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.CategoriaId"></label>
            </div>
            <div class="col-8">
                <select asp-for="Articulo.CategoriaId" class="form-control" asp-items="Model.ListaCategorias"></select>
                <span asp-validation-for="Articulo.CategoriaId" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.habilitada"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.habilitada" type="checkbox" />
                <span asp-validation-for="Articulo.habilitada" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Articulo.urlImagen"></label>
            </div>
            <div class="col-8">
                <input asp-for="Articulo.urlImagen" class="form-control" placeholder="Ingresa la URL de la imagen" />
                <span asp-validation-for="Articulo.urlImagen" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary form-control">Editar Artículo</button>
            </div>
            &nbsp;
            <div class="col">
                <a asp-action="Index" class="btn btn-success form-control">Volver atrás</a>
            </div>
        </div>
    </div>
</form>