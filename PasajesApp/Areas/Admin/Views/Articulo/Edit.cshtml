@model pasajeApp.Modelo.Articulo


@{
    ViewData["Title"] = "Editar Artículo";
}

<h1>Editar Artículo</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <!-- Nombre del Artículo -->
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <!-- Selección de Categoría -->
    <div class="form-group mt-3">
        <label asp-for="CategoriaId" class="control-label">Categoría</label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <!-- Habilitada -->
    <div class="form-group mt-3">
        <label asp-for="habilitada" class="control-label">habilitada</label>
        <select asp-for="habilitada" class="form-control" asp-items="ViewBag.habilitada"></select>

        @* <input type="checkbox" asp-for="habilitada" class="form-check-input" />
        <span asp-validation-for="habilitada" class="text-danger"></span> *@
    </div>

    <!-- Precio del Artículo -->
    <div class="form-group mt-3">
        <label asp-for="precio" class="control-label">Precio</label>
        <input asp-for="precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="precio" class="text-danger"></span>
    </div>

    <!-- Botones de acción -->
    <div class="form-group mt-4">
        <input type="submit" value="Guardar cambios" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
