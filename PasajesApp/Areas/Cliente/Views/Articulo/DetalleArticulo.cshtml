@{
    ViewData["Title"] = "Detalles del Artículo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary" id="articuloNombre">Cargando...</h2>
        </div>
    </div>

    <br />
    <br />

    <div class="row">
        <div class="col-md-6">
            <!-- Imagen del artículo -->
            <img id="articuloImagen" class="img-fluid" alt="Imagen del artículo" style="height: 100%; width: auto; object-fit: contain;" />
        </div>
        <div class="col-md-6">
            <h3>Detalles del Artículo</h3>
            <p><strong>Categoría:</strong> <span id="articuloCategoria">Cargando...</span></p>
            <p><strong>Precio:</strong> $<span id="articuloPrecio">0.00</span></p>
            <p><strong>Habilitado:</strong> <span id="articuloHabilitada">Cargando...</span></p>
            <p><strong>Descripción:</strong> <span id="articuloDescripcion">Cargando...</span></p>
        </div>
    </div>

    <a href="/Cliente/Articulo/Index" class="btn btn-secondary mt-4">Volver a la lista</a>
</div>

@section Scripts {
    <script src="~/js/Details.js"></script>
}
